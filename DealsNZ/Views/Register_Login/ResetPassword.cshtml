@model DealsNZ.Models.AccountModels.ResetPass

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}



@using (Html.BeginForm("ResetPassword", "Register_Login"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reset Password</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <fieldset>
                <h5 class="waves-effect center col m12 s12 materialize-red-text accent-3">@ViewBag.ResetPassError</h5>
                @Html.HiddenFor(model => model.ForgotUserID);
                <div class="row">
                    <div class="input-field inline col m6 s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "validate", @type = "password" })
                        @Html.LabelFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red-text", @type = "password col s3" })
                    </div>
                    <div class="input-field inline col m6 s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(model => model.ConformPassword, htmlAttributes: new { @class = "validate", @type = "password" })
                        @Html.LabelFor(model => model.ConformPassword)
                        @Html.ValidationMessageFor(model => model.ConformPassword, "", new { @class = "red-text", @type = "password col s3" })
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Change" class="btn btn-large" />
                </div>
            </fieldset>
        </div>
    </div>
}