@model DealsNZ.Models.AccountModels.Register
<div class="white row accent-4">

    @using (Html.BeginForm("RegisterUser", "Register_Login"))
    {
        <div class="col  s12 bordered">
            <h3 class="waves-effect center col m12 s12 black-text accent-3">Register</h3>
            <fieldset>
                <h5 class="waves-effect center col m12 s12 materialize-red-text accent-3">@ViewBag.RegisterError</h5>
                <div class="input-field inline col m6 s12">
                    <i class="material-icons prefix">account_circle</i>
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "validate", @type = "text" })
                    @Html.LabelFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red-text", @type = "name col s3" })
                </div>
                <div class="input-field inline col m6 s12">
                    <i class="material-icons prefix">email</i>

                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "validate", @type = "email", @MaxLenght = "10" })
                    @Html.LabelFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "red-text", @type = "col s3" })
                </div>
                <div class="input-field inline col m6 s12">
                    <i class="material-icons prefix">vpn_key</i>
                    @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "validate", @type = "password" })
                    @Html.LabelFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red-text", @type = "col s3" })
                </div>
                <div class="input-field inline col m6 s12">
                    <i class="material-icons prefix">vpn_key</i>
                    @Html.TextBoxFor(model => model.ConformPassword, htmlAttributes: new { @class = "validate", @type = "password" })
                    @Html.LabelFor(model => model.ConformPassword)
                    @Html.ValidationMessageFor(model => model.ConformPassword, "", new { @class = "red-text small", @type = "col s3" })
                </div>
                <div class="input-field inline  center col m12 s12">
                    <input type="submit" value="Register" name="RegisterUser" class="btn-large teal black-text" />
                </div>
            </fieldset>
        </div>
    }

</div>
