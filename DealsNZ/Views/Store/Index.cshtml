@using PagedList;
@using PagedList.Mvc;

@model IPagedList<DealsNZ.Models.Store>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}
<span class="card-title">Stores</span>
<div class="row">
    <div class="col s12 ">
        <div class="card white darken-1">
            <div class="card-content black-text">
              <div>
                  <div>
                      <form>
                          <div class="input-field">
                              <input id="search" type="search" class="teal-text" required>
                              <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                              <i class="material-icons class=" teal-text"">close</i>
                          </div>
                      </form>
                  </div>

                    <table class="responsive-table bordered highlight accent-3">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().StoreName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().UserId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Contact)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().IdentificationImage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Company)
                            </th>
                            <th>Actions</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoreName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.UserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contact)
                                </td>
                                <td>
                                 
                                        <img src="@Url.Content(@Model.First().IdentificationImage)" style="width:80px"/>
                                   
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.StoreId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.StoreId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.StoreId })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                
            </div>
            <div class="card-action">
                @Html.ActionLink("Create New", "Create")
            </div>
            <div>
           @Html.PagedListPager(Model, page => Url.Action("Index", new {page, @class = "teal-text" }))
                </div>
        </div>
    </div>
</div>