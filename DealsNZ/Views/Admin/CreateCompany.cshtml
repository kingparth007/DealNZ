@model DealsNZ.Models.DealsModels.CompanyViewModel

@{
    ViewBag.Title = "CreateCompany";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card grey lighten-4">
    @using (Html.BeginForm("CreateCompany", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card-content black-text">
            <span class="card-title">Add Company</span>
            <div class="row">
                <div class="col m6 s12">
                    <div class="input-field ">
                        @Html.TextBoxFor(model => model.CompanyName, htmlAttributes: new { @class = "validate" })
                        @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "black-text" })
                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "red-text" })
                    </div>
                </div>             
            </div>
            <div class="row">
                <div class="card-action">
                    <div>
                        <input type="submit" value="Add Company" class="btn waves-effect waves-light" />
                    </div>
                </div>
                <h6 class="waves-effect center materialize-red-text accent-3">@ViewBag.message</h6>
            </div>
        </div>
        <div class="card-action">
            @Html.ActionLink("Back to List", "Store")
        </div> 

    }
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
