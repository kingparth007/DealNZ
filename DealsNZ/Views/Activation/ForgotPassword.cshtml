@model DealsNZ.Models.AccountModels.ForgotPass

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}



@using (Html.BeginForm("ForgotPassword", "Activation"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ForgotPassword</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <fieldset>
                <h6 class="waves-effect center col m12 s12 materialize-red-text accent-3">@ViewBag.ForgotPassError</h6>
                <br />
                <div class="row">
                    <div class="input-field inline col m5 s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(model => model.ForgotPassEmail, htmlAttributes: new { @class = "validate", @type = "email" })
                        @Html.LabelFor(model => model.ForgotPassEmail)
                        @Html.ValidationMessageFor(model => model.ForgotPassEmail, "", new { @class = "red-text", @type = "email col s3" })
                    </div>
                </div>
                <br />
                <div class="col-md-offset-2  col-md-10">
                    <input type="submit" value="Generate Link" class="btn btn-default" />
                </div>
            </fieldset>
        </div>
    </div>
}

<div style="margin-bottom:250px;">

</div>
