@model IEnumerable<DealsNZ.Models.Subscription>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubscriptionTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubscriptionDiscription)
        </th>
        <th>
            -    @Html.DisplayNameFor(model => model.SubscriptionPrice)+
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedOn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionDiscription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedOn)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SubscriptionId }) |
                @Html.ActionLink("Details", "Details", new { id = item.SubscriptionId }) |
                @Html.ActionLink("Delete", "DeleteConfirmed", new { id = item.SubscriptionId })
            </td>
        </tr>
    }

</table>
