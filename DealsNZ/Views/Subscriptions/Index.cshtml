@model IEnumerable<DealsNZ.Models.Subscription>

@{
    ViewBag.Title = "Subscriptions";
}


<div class="row">
    <div class="col s12 m12">
        <div class="card grey lighten-4">

            <div class="card-content black-text">
                <h4><span class="card-title">Subscriptions</span></h4>
                <p>
                    <a class="btn-floating btn blue tooltipped" data-position="top" data-delay="50" data-tooltip="Add Subscriptions" href='@Url.Action("Create","Subscriptions")'><i class="material-icons">add</i></a>
                    
                </p>
                <table class="table offset-l2">
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Discription
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubscriptionTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubscriptionDiscription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubscriptionPrice)
                            </td>
                            <td>
                                <a class="btn-floating btn blue" href='@Url.Action("Edit", "Subscriptions", new { id = item.SubscriptionId}, null)'><i class="material-icons">edit</i></a>|
                                <a class="btn-floating btn red" href='@Url.Action("DeleteConfirmed", "Subscriptions", new { id = item.SubscriptionId}, null)'><i class="material-icons">delete</i></a>
                                
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>