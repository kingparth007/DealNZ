                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SubscriptionDiscription, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.SubscriptionDiscription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SubscriptionDiscription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SubscriptionPrice, htmlAttributes: new { @class = "col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SubscriptionPrice, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SubscriptionPrice, "", new { @class = "text-danger" })
                    </div>
                </div>

