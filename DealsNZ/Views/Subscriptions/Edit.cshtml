@model DealsNZ.Models.Subscription

@{
    ViewBag.Title = "Subscriptions";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card grey lighten-4">

        <div class="card-content black-text">

            <div class="form-horizontal">
                <h4 class="card-title">Edit Subscription</h4>
                <hr />
                <label class="mdi-action-label-outline red-text">@ViewBag.ErrorMsg</label>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SubscriptionId)

                <div class="form-group">
                    @Html.LabelFor(model => model.SubscriptionTitle, htmlAttributes: new { @class = "control-label col-md-2" })
